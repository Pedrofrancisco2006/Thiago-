lista = []
dado = []
maior = 0
menor = 0
for c  in range(0,2):
    dado.append(str(input('Nome:  ')))
    dado.append(int(input('idade: ')))
    lista.append(dado[:])
    dado.clear()


for dado in lista:
    if dado[1] >= 18:
        print(f'{dado[0]} É de maior')
        maior += 1
    else:
        print(f'{dado[0]} É de menor')
        menor += 1

print(f'\n Temos um total de {maior} pessoas MAIORES de idade')     
print(f'Temos um total de {menor} pessoas MENORES de idade')
