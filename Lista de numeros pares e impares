numeros = [[] , []]
valor = 0 

for c in range (1,8):
    valor= int(input(f'Digite o  {c}º Valor: '))
    if valor % 2 == 0:
        numeros[0].append(valor)
    else:
        numeros[1].append(valor)

print("--"*30)  
numeros.sort
print(f'Você digitou os valores pares:  {numeros[0]}')
print(f'Você digitou os valores Impares:  {numeros[1]}')
